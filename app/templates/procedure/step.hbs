{{#paper-card}}
  {{#paper-card-content}}
    <h2>{{model.name}} <small>step {{model.order}}</small></h2>

    <p>{{model.text}}</p>
  {{/paper-card-content}}

  <div class="md-actions" layout="row" layout-align="end center">
    {{#if model.readyForNext}}
      {{#paper-button action='next'}}Next{{/paper-button}}
    {{/if}}
  </div>
{{/paper-card}}
